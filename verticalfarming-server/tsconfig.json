{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es6"],
		"types": ["reflect-metadata"],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "build"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}